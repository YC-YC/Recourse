<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.resources"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <!-- 网络访问权限 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- wifi -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/ThemeActivity" ><!-- 自定义动画切换 -->
        <activity
            android:name="com.example.resources.MainActivity"
             android:launchMode="singleInstance"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <activity android:name="com.example.resources.ResourceActivity"></activity>
         <activity android:name="com.example.resources.AnimationActivity"></activity>
         <activity android:name="com.example.resources.ReflectActivity"></activity>
         <activity android:name="com.example.resources.ContentResolveActivity"></activity>
         <activity android:name="com.example.resources.popupwin.PopupWindowActivity"></activity>
       
         
         
         <activity android:name="com.example.resources.drawable.ButtonState"></activity>
        <activity android:name="com.example.resources.drawable.Clip"></activity>
        <activity android:name="com.example.resources.drawable.CrossFade"></activity>
        <activity android:name="com.example.resources.drawable.Inset"></activity>
        <activity android:name="com.example.resources.drawable.Layer"></activity>
        <activity android:name="com.example.resources.drawable.Level"></activity>
        <activity android:name="com.example.resources.drawable.Shape"></activity>
        
        <!-- 服务器 -->
        <activity
            android:name="com.example.resources.socket.ServerActivity"
             android:launchMode="singleInstance"
            android:label="@string/socket_server" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 客户端1 -->
        <activity
            android:name="com.example.resources.socket.Client1Activity"
            android:launchMode="singleInstance"
            android:label="@string/socket_client1" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
         <!-- 客户端2 android:launchMode="singleInstance"为可多个-->
        <activity
            android:name="com.example.resources.socket.Client2Activity"
            android:launchMode="singleInstance"
            android:label="@string/socket_client2" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- 自定义ContentProvider -->
        <provider android:name="com.example.resources.provider.PersonContentProvider"
            android:authorities="com.example.resources.PersonContentProvider"></provider>
    </application>

</manifest>
